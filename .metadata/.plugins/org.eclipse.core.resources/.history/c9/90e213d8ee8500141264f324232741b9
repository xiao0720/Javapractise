package tutorial2;

public class Methods {

	public static void main(String[] args) {
		System.out.pritnln("Simple calculator. Please choose an operation:\n1. Add\n2. Substract\n3. Multiply\n4. Divide\n5. Exit");
		Scanner scanner = new Scanner(System.in);
		int n = scanner.nextInt();
		if (n < 5 && n > 0) {
			System.out.println("Test");
		}
	}

	public static int add(int a, int b){
	//public - access everywhere in the system
	//static - class method, no need to create an instance to use the method
		int result = a + b;
		return result;
	}

	public static int substract(int a, int b){
		int result = a - b;
		return result;
	}

	public static int multiply(int a, int b){
		int result = a * b;
		return result;
	}

	public static int devide(int a, int b){
		int result = a / b;
		return result;
	}


